package am;

public class Score {
	//filed
	String name;
	int kor;
	int eng;
	int mat;
	
	//생성자
	
	public Score() {
		
	}
	
	
	public Score(String name, int kor, int eng, int mat) {
		super();
		this.name = name;
		this.kor = kor;
		this.eng = eng;
		this.mat = mat;
	}


	//method
	public int total() {
		int total= kor+eng+mat;
		return total;
	}	
	public double avg() {
		return total()/3.;
	}
	
	public void print() {
		System.out.printf("%s \t %d \t %d \t %d \t %d /t %.2f \n",name,kor,eng,mat,total(),avg());
		
	}
	
	//void 는 돌려줄 값이 없을때 사용한다
}
