package pm;

public class Sale {
	
	//필드
	String code;
	String name;
	int price;
	int qnt;
	int sum;
	
	//생성자
	
	
	//method
	//금액을 구하는 메서드
	public int sum() {
		int sum=price*qnt;
		return sum;
	}
	
	// 내용 가로출력
	public void printLand() {
		System.out.printf("%s\t%s\t%d\t%d\t%d\n",code,name,price,qnt,sum());
	}
	
	//내용 세로출력
	public void printPort() {
		System.out.println("가격:"+price);
		System.out.println("수량:"+qnt);
		System.out.println("금액:"+sum());
		
	}
}
